<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >

    <!-- Imagen alineada a la izquierda -->
    <ImageView
        android:id="@+id/fotoFugitivoItem"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@android:drawable/ic_menu_gallery"/>

    <!-- Texto justificado a la izquierda -->
    <TextView
        android:id="@+id/textFugitivoItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ejemplo de texto"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fotoFugitivoItem"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fechaFugitivoItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ejemplo de texto"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fotoFugitivoItem"
        app:layout_constraintTop_toBottomOf="@+id/textFugitivoItem" />
</androidx.constraintlayout.widget.ConstraintLayout>